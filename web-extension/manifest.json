{
  "manifest_version": 3,
  "name": "Github Party",
  "version": "1.0.1",
  "description": "Real-time collaboration for GitHub issues",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/issues/*"],
      "js": ["content.js"]
    }
  ]
} 