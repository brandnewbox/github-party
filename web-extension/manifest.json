{
  "manifest_version": 3,
  "name": "GitHub Multiplayer",
  "version": "1.0.0",
  "description": "Real-time collaboration for GitHub issues",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/issues/*"],
      "js": ["content.js"]
    }
  ]
} 